<%= form_tag @search_path, method: 'get' do %>
  <% if @result.nil?  %>
    <%= text_field_tag :value, nil, class: "form-control", placeholder: "Введите номер добавки" %>
  <% else %>
    <%= text_field_tag :value, nil, class: "form-control", placeholder: "#{@result.name}" %>
  <% end %>
  <%= submit_tag "Search", class: "btn btn-large btn-primary" %>
<% end%>
