<div class='container'>
  <%= form_for @additive, url: {action: "update"} do |f| %>
    <%= render 'shared/error_messages', object: f.object%>

    <%= f.text_field :name, value: @additive.name %>
    <%= f.text_area :about, value: @additive.about %>

    <%= f.submit "Сохранить", class: "btn btn-lg btn-primary" %>
    <%= link_to "Удалить", admin_food_additive_path(@additive.id),
                           method: :delete, class: "btn btn-lg btn-danger",
                           data: { confirm: "Are you sure?" } %>
  <% end %>
</dev>
